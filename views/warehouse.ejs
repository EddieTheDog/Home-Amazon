<!DOCTYPE html>
<html>
<head>
  <title>Warehouse</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>ğŸ­ Warehouse Packages</h1>
  <table border="1">
    <tr>
      <th>ID</th><th>Recipient</th><th>Status</th><th>Action</th>
    </tr>
    <% packages.forEach(pkg => { %>
      <tr>
        <td><%= pkg.id %></td>
        <td><%= pkg.recipient %></td>
        <td><%= pkg.status %></td>
        <td>
          <form action="/warehouse/update" method="POST">
            <input type="hidden" name="id" value="<%= pkg.id %>">
            <select name="status">
              <option>Received</option>
              <option>On Truck</option>
              <option>Out for Delivery</option>
            </select>
            <button>Update</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
