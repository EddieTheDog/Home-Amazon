<!DOCTYPE html>
<html>
<head>
  <title>Warehouse Scan</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>ðŸ“¦ Warehouse Scan</h1>
  <video id="scanner" width="300" height="200"></video>
  <div id="status">Waiting for scan...</div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/quagga/0.12.1/quagga.min.js"></script>
  <script>
    const socket = io();
    const statusEl = document.getElementById('status');

    Quagga.init({
      inputStream : { name : "Live", type : "LiveStream", target: document.querySelector('#scanner') },
      decoder : { readers : ["code_128_reader"] }
    }, function(err) {
        if (err) { console.log(err); return; }
        Quagga.start();
    });

    Quagga.onDetected(function(result) {
      const code = result.codeResult.code;
      statusEl.innerText = 'Scanned: ' + code;
      fetch(`/warehouse/update/${code}`, { method: 'POST', body: new URLSearchParams({status: 'Processing'}) })
        .then(() => statusEl.innerText = 'Updated!');
    });
  </script>
</body>
</html>
